                <span class="kt">int</span> <span class="n">nodeTo</span> <span class="o">=</span> <span class="n">m_viPerm</span><span class="p">.</span><span class="n">at</span><span class="p">(</span><span class="n">nodeFrom</span><span class="o">-</span><span class="mi">1</span><span class="p">);</span>
