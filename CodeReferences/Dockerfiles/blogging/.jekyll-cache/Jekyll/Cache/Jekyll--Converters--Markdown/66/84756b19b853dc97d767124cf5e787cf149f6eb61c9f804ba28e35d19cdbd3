                    <span class="n">usi</span><span class="o">::</span><span class="n">iterator</span> <span class="n">delit</span> <span class="o">=</span> <span class="n">m_usiPerm</span><span class="p">.</span><span class="n">find</span><span class="p">(</span><span class="n">nodeTo</span><span class="p">);</span>
