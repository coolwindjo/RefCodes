{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Terminal (external)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ToDo/${fileBasenameNoExtension}/${fileBasenameNoExtension}.exe",
            "args": [
                "<",
                "input.txt",
                ">",
                "output.txt",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/ToDo/${fileBasenameNoExtension}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build C++"
        },
        {
            "name": "(gdb) Pipe Launch",
            "type": "cppdbg",
            "request": "launch",
            // "program": "${workspaceFolder}/ToDo/${fileBasenameNoExtension}/${fileBasenameNoExtension}.exe",
            "program": "./${fileBasenameNoExtension}.exe",
            "args": [
                "<",
                "input.txt",
                ">",
                "output.txt",
            ],
            "stopAtEntry": false,
            // "cwd": "${workspaceFolder}/ToDo/${fileBasenameNoExtension}",
            "cwd": "./",
            "environment": [],
            "externalConsole": false,
            "pipeTransport": {
                "debuggerPath": "/usr/bin/gdb",
                "pipeProgram": "${env:windir}\\system32\\bash.exe",
                "pipeArgs": [
                    "-c"
                ],
                "pipeCwd": "${workspaceFolder}/ToDo/${fileBasenameNoExtension}",
            },
            "MIMode": "gdb",
            "sourceFileMap": {
                "/mnt/c": "c:\\"
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false,
                }
            ],
            "preLaunchTask": "build C++"
        },
    ]
}